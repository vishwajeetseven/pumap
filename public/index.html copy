    #map {
      position: absolute;
      top: 50%;
      left: 50%;
      height: 100vh;
      width: auto;
      object-fit: cover;
      transform-origin: center center;
      transform: translate(-50%, -50%) scale(1);
      transition: transform 0.3s;
    }
    .controls {
      position: absolute;
      top: 10px;
      right: 10px;
      display: flex;
      flex-direction: column;
      background: rgba(255, 255, 255, 0.2);
      padding: 5px;
