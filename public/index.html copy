<body>
  <div id="map-container">
    <img id="map" src="https://cdn.glitch.global/5bc9edf4-373c-47f7-9a1c-29acc401cd85/PU-Campus%20Map%202023%20latest.png?v=1742490596402" alt="Map">
    <div class="controls">
      <button id="zoom-in">+</button>
      <button id="zoom-out">-</button>
      <button id="rotate-map">â†»</button>
    </div>
  </div>

  <script>
    const map = document.getElementById('map');
    let scale = 1;
    let rotation = 0; // Starting rotation angle (0 degrees)

    // Adjust initial transform properties based on screen size
    function updateTransform() {
      const transformValue = `translate(-50%, -50%) rotate(${rotation}deg) scale(${scale})`;
      map.style.transform = transformValue;
    }

    // Zoom in functionality
    document.getElementById('zoom-in').addEventListener('click', () => {
      scale += 0.1;
      updateTransform();
    });

    // Zoom out functionality
    document.getElementById('zoom-out').addEventListener('click', () => {
      scale = Math.max(0.5, scale - 0.1);
      updateTransform();
    });

    // Rotate map functionality (clockwise by 90 degrees with each click)
    document.getElementById('rotate-map').addEventListener('click', () => {
      rotation = (rotation + 90) % 360; // Rotate clockwise by 90 degrees
      updateTransform();
    });

    // Initial map transform
    updateTransform();
  </script>
</body>
